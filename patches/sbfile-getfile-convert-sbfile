+  uint32_t GetOptions() const override {
+    auto obj = Retain<PythonObject>(m_py_obj);
+    auto opts = GetOptionsForPyObject(obj);
+    if (opts)
+      return opts.get();
+    llvm::consumeError(opts.takeError());
+    return 0;
